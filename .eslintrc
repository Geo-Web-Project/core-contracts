{
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "mocha",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "mocha/no-exclusive-tests": "error",
    "mocha/no-pending-tests": "error"
  }
}